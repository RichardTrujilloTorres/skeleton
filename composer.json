{
  "name": "lighthouse/skeleton",
  "description": "Lighthouse Framework Application Skeleton",
  "type": "project",
  "license": "MIT",
  "keywords": [
    "framework",
    "skeleton",
    "mvc",
    "lighthouse"
  ],
  "require": {
    "php": "^8.2",
    "lighthouse/framework": "^0.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8000 -t public",
    "test": "phpunit"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "stable"
}
